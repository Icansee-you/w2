# Auto detect text files and perform LF normalization
* text=auto

# Force LF line endings for Python files (important for cross-platform compatibility)
*.py text eol=lf
*.pyw text eol=lf

# Force LF for other common text files
*.md text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.sql text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
